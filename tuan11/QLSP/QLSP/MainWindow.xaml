<Window x:Class="QLSP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLSP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid  Name="dssp" Margin="100 50 100 200"
            AutoGenerateColumns="False"
            AlternatingRowBackground="AntiqueWhite"
            CanUserAddRows="false"
            >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ma SP" Binding="{Binding masp}"/>
                <DataGridTextColumn Header="Ten SP" Binding="{Binding tensp}"/>
                <DataGridTextColumn Header="Ma Loai" Binding="{Binding maloai}"/>
                <DataGridTextColumn Header="Don Gia" Binding="{Binding dongia}"/>
                <DataGridTextColumn Header="So Luong" Binding="{Binding sl}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="show" Content="Hien thi danh sach" HorizontalAlignment="Left" Margin="300,307,0,0" VerticalAlignment="Top" Height="35" Width="159" Click="show_Click"/>


    </Grid>
</Window>
